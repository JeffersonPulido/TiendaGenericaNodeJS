<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- CSS -->
        <link rel="shortcut icon" href="/images/icono.ico">
        <link rel="stylesheet" href="/css/footer.css">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- FontAwesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
            integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        <!-- DataTables CDN-->
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
        <link rel="stylesheet" type="text/css"
            href="https://cdn.datatables.net/v/bs5/dt-1.11.3/r-2.2.9/sc-2.0.5/sb-1.3.0/datatables.min.css" />
        <script type="text/javascript"
            src="https://cdn.datatables.net/v/bs5/dt-1.11.3/r-2.2.9/sc-2.0.5/sb-1.3.0/datatables.min.js"></script>
        <title>Tienda Supermarket S.A.S.</title>
        <script>
            $(document).ready(function () {
                $('#TablaDat').DataTable({
                    "paging": true,
                    "buttons": true,
                    "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "TODOS"]],
                    "paginate": true,
                    "language": { "url": "https://cdn.datatables.net/plug-ins/1.10.22/i18n/Spanish.json" }

                });
            });
        </script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/proveedores">TiendaGenerica V2 | <b>Actualizar Proveedor</b></a>
            </div>
        </nav>
        <br>
        <br>
        <hr>
        <div class="container mt-5 ">
            <div class="row">
                <!--FORM-->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <form action="/editVendor/<%= proveedores._id %>" method="POST">
                                <div class="form-group">
                                    <label for="nitproveedor" class="form-label">NIT</label>
                                    <input type="number" min="1" id="nitproveedor" name="nitproveedor"
                                        placeholder="Ingrese Nit Proveedor" class="form-control" value="<%= proveedores.nitproveedor %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="ciudad_proveedor" class="form-label">Ciudad</label>
                                    <input type="text" name="ciudad_proveedor" placeholder="Ingrese Ciudad Proveedor"
                                        class="form-control" value="<%= proveedores.ciudad_proveedor %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="direccion_proveedor" class="form-label">Direccion</label>
                                    <input type="text" name="direccion_proveedor" placeholder="Ingrese Direccion"
                                        class="form-control" value="<%= proveedores.direccion_proveedor %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="nombre_proveedor" class="form-label">Nombre Proveedor</label>
                                    <input type="text" name="nombre_proveedor" placeholder="Ingrese Nombre Proveedor"
                                        class="form-control" value="<%= proveedores.nombre_proveedor %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="telefono_proveedor" class="form-label">Telefono Proveedor</label>
                                    <input type="number" min="1" name="telefono_proveedor"
                                        placeholder="Ingrese Telefono Proveedor" class="form-control" value="<%= proveedores.telefono_proveedor%>" required>
                                </div><br>
                                <button class="btn btn-primary col-12" type="submit">Actualizar Proveedor</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <img style="float:right; margin-top: 0px;" src="/images/LOGO.jpg" alt="descripción" />
                </div>
            </div>
        </div>
        <hr>
        <div class="footer-text">
            <a href="">©MinTIC2022 Developers</a>
        </div>
    </body>
</html>