<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- CSS -->
        <link rel="shortcut icon" href="/images/icono.ico">
        <link rel="stylesheet" href="/css/footer.css">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- FontAwesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
            integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        <!-- DataTables CDN-->
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
        <link rel="stylesheet" type="text/css"
            href="https://cdn.datatables.net/v/bs5/dt-1.11.3/r-2.2.9/sc-2.0.5/sb-1.3.0/datatables.min.css" />
        <script type="text/javascript"
            src="https://cdn.datatables.net/v/bs5/dt-1.11.3/r-2.2.9/sc-2.0.5/sb-1.3.0/datatables.min.js"></script>
        <title>Tienda Supermarket S.A.S.</title>
        <script>
            $(document).ready(function() {
                $('#TablaDat').DataTable({
                    "paging": true,
                    "buttons": true,
                    "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "TODOS"]],
                    "paginate": true,
                    "language": {"url": "https://cdn.datatables.net/plug-ins/1.10.22/i18n/Spanish.json"}                  
                });
            } );
        </script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/productos">TiendaGenerica V2 | <b>Actualizar Producto</b></a>
            </div>
        </nav>
        <hr>
        <div class="container mt-5 ">
            <div class="row">
                <!--FORM-->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <form action="/editProduct/<%= productos._id %>" method="POST">
                                <div class="form-group">
                                    <label for="codigo_producto" class="form-label">Codigo Producto</label>
                                    <input type="number" min="1" id="codigo_producto" name="codigo_producto"
                                        placeholder="Ingrese Codigo Producto" class="form-control" value="<%= productos.codigo_producto %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="nombre_producto" class="form-label">Nombre</label>
                                    <input type="text" name="nombre_producto" placeholder="Ingrese Nombre Producto"
                                        class="form-control" value="<%= productos.nombre_producto %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="nitproveedor" class="form-label">NIT</label>
                                    <input type="text" name="nitproveedor" placeholder="Ingrese NIT Proveedor"
                                        class="form-control" value="<%= productos.nitproveedor %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="precio_compra" class="form-label">Precio Compra</label>
                                    <input type="number" min="1" name="precio_compra" placeholder="Ingrese Precio Compra"
                                        class="form-control" value="<%= productos.precio_compra %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="ivacompra" class="form-label">IVA</label>
                                    <input type="number" min="1" name="ivacompra"
                                        placeholder="Ingrese IVA" class="form-control" value="<%= productos.ivacompra%>" required>
                                </div>
                                <div class="form-group">
                                    <label for="precio_venta" class="form-label">Precio Venta</label>
                                    <input type="number" min="1" name="precio_venta"
                                        placeholder="Ingrese Precio Venta" class="form-control" value="<%= productos.precio_venta%>" required>
                                </div><br>
                                <button class="btn btn-primary col-12" type="submit">Actualizar Producto</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <img style="float:right; margin-top: 0px;" src="/images/LOGO.jpg" alt="descripción" />
                </div>
            </div>
        </div>
        <hr>
        <div class="footer-text">
            <a href="">©MinTIC2022 Developers</a>
        </div>
    </body>
</html>